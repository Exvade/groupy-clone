{
  "manifest_version": 3,
  "name": "Canva Cookie Inserter",
  "description": "Insert cookie into Canva",
  "version": "1.0",
  "permissions": [
    "cookies",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.canva.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self';"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
